<script>
  function checkAnswers() {
    const answers = {
      q1: "1854",
      q2: "Gabrielle Chanel",
      q3: "Rolex",
      q4: "Yves Saint Laurent",
      q5: "Herm√®s"
    };

    let score = 0;
    for (let key in answers) {
      const radios = document.getElementsByName(key);
      for (const radio of radios) {
        if (radio.checked && radio.value === answers[key]) {
          score++;
        }
      }
    }

    const percent = (score / Object.keys(answers).length) * 100;
    const result = document.getElementById("result");
    result.innerHTML = `Score : ${score}/5 (${percent}%)<br>`;

    // Afficher ou masquer les sections
    if (percent >= 80) {
      result.innerHTML += "‚úÖ F√©licitations ! Vous d√©bloquez l'acc√®s aux fichiers SELEZIONE.";
      document.getElementById("download-section").style.display = "block";
      document.getElementById("locked-section").style.display = "none";
    } else {
      result.innerHTML += "‚ùå Vous devez obtenir au moins 80% pour d√©bloquer les fichiers.";
      document.getElementById("download-section").style.display = "none";
      document.getElementById("locked-section").style.display = "block";
    }
  }
</script>
